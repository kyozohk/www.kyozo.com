
{
  "entities": {
    "user": {
      "title": "User",
      "description": "User profile information",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "avatarUrl": { "type": "string", "format": "uri" },
        "coverUrl": { "type": "string", "format": "uri" },
        "bio": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "email", "createdAt", "updatedAt"]
    },
    "blog": {
      "title": "Blog",
      "description": "A blog post.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "content": { "type": "string" },
        "authorId": { "type": "string" },
        "author": { "$ref": "#/backend/entities/user" },
        "communityHandle": { "type": "string" },
        "visibility": { "type": "string", "enum": ["public", "private"] },
        "likes": { "type": "number", "description": "Total number of likes." },
        "comments": { "type": "number", "description": "Total number of comments." },
        "shares": { "type": "number", "description": "Total number of shares." },
        "createdAt": { "type": "string", "format": "date-time" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "content", "authorId", "communityHandle", "visibility", "createdAt", "updatedAt"]
    },
    "community": {
      "title": "Community",
      "description": "A community group.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "handle": { "type": "string" },
        "ownerId": { "type": "string" },
        "tagline": { "type": "string" },
        "lore": { "type": "string" },
        "mantras": { "type": "string" },
        "slug": { "type": "string" },
        "status": { "type": "string", "enum": ["draft", "publish", "archived"] },
        "communityPrivacy": { "type": "string", "enum": ["public", "private", "invite-only"] },
        "communityType": { "type": "string", "enum": ["community", "group", "event", "course"] },
        "communityProfileImage": { "type": "string", "format": "uri" },
        "communityBackgroundImage": { "type": "string", "format": "uri" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "location": { "type": "string" },
        "colorPalette": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "colorId": { "type": "number" },
              "hexCode": { "type": "string" }
            }
          }
        }
      },
      "required": ["name", "handle", "ownerId"]
    },
    "userInteraction": {
      "title": "User Interaction",
      "description": "Records a user's interaction with a piece of content.",
      "type": "object",
      "properties": {
        "userId": { "type": "string", "description": "The ID of the user (authenticated or anonymous)." },
        "postId": { "type": "string", "description": "The ID of the post being interacted with." },
        "communityId": { "type": "string", "description": "The ID of the community the post belongs to." },
        "interactionType": { "type": "string", "enum": ["play", "like", "view", "finish", "comment", "share"], "description": "The type of interaction." },
        "mediaType": { "type": "string", "enum": ["audio", "video", "text", "image"], "description": "The type of media interacted with." },
        "playDurationSeconds": { "type": "number", "description": "Duration of the playback in seconds." },
        "timestamp": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "postId", "interactionType", "timestamp"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/user" },
      "description": "User profile documents"
    },
    "/blogs/{blogId}": {
      "schema": { "$ref": "#/backend/entities/blog" },
      "description": "Blog post documents"
    },
    "/blogs/{blogId}/likes/{likeId}": {
      "schema": { "$ref": "#/backend/entities/userInteraction" },
      "description": "Likes on a blog post"
    },
    "/blogs/{blogId}/comments/{commentId}": {
      "schema": { "$ref": "#/backend/entities/userInteraction" },
      "description": "Comments on a blog post"
    },
    "/communities/{communityId}": {
        "schema": { "$ref": "#/backend/entities/community"},
        "description": "Community documents"
    },
    "/userInteractions/{interactionId}": {
      "schema": { "$ref": "#/backend/entities/userInteraction" },
      "description": "User interaction records"
    }
  }
}
